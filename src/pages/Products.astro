<style>
    #datorer {
        gap: 10px;
        display: flex;
        justify-content: center;
        flex-direction: row;
        flex-wrap: wrap;
    }
    #datorer a{
        text-decoration: none;
        color: black;
    }
    h1{
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 35px;
        background-color: #2b83f9;
        padding: 10px;
        color: white;
        box-shadow: var(--shadow);
    }

</style>