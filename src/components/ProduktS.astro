---
interface Props {
    name: string;
    description: string;
    pictureName: string;
    gpu: string;
    cpu: string;
    ram: string;
    lagring: string;
    pris: string;
}
const {name, description, pictureName, gpu, cpu, ram, lagring, pris} = Astro.props;
---
<div class="ProduktS">


    <p id="title">
        {name}
    </p>



    <div class="productpd">

        <div id="buttons">
            <div id="button">
                <a href="about.html">
                   
                </a>
            </div>

            <div id="button">
                <a href="about.html">
                            
                </a>
            </div>

            <div id="button">
                <a href="about.html">
                    
                </a>
            </div>
        </div>

        

        <div id="picture">
            <img src={"/Assets/" + pictureName}>
        </div>

        

        <div id="icons">
            <img src="/Assets/Processor_icon.svg" alt="">
            <img src="/Assets/Graphics_card.svg" alt="">
            <img src="/Assets/ram_icon.svg" alt="">
            <img src="/Assets/hard_drive_icon.svg" alt="">
        </div>

        <div id="description">
            <p>{cpu}</p>
            <p>{gpu}</p>
            <p>{ram}</p>
            <p>{lagring}</p>
        </div>

        
        
</div>





<style>
    .ProduktS{
    height: 1000px;
    background-color: white;
    margin: -39px 30px 0px 30px
    }

    #title{
       padding: 40px 0px 40px 100px;
       font-size: 35px;
       font-weight: 700;

       border-bottom: 1px solid #d4d4d4;

    }

   .productpd{
  
    display: grid;
    grid-template: 100% / 20% 20% 15% 45%;
    grid-template-areas: 
    "buttons picture icons description";
   }

   #buttons{
    grid-area: buttons;
    
   }

   #button a{
    outline: 2px solid black;
    color: black;
    font-size: xx-large;
    text-decoration: none;

    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30px 0px 30px 0px;
    margin: 20px 70px 20px 70px;
    border-radius: 10px;

    height: 40px;

   
   }


   
   #picture{
    grid-area: picture;
   }
  

   #icons{
    grid-area: icons;
    padding-top: 20px;
    display: flex;
    flex-direction: column;
   }

   #icons img{
    height: 80px;
    scale: 0.7;
   }

   #description{
    grid-area: description;


    display: flex;
    flex-direction: column;
    align-items: start;
    font-size: larger;
    font-weight: bolder;

    margin-left: -60px;
    padding-top: 30px;
   
   }

   #description p{
        padding-bottom: 20px;
   }


  
</style>